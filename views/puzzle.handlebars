</head>
<body>
	<audio id="musicPlayer"  loop>{{songPath}}</audio>
	<!--iframe src="/music/{{songPath}}" allow="autoplay" style="display:none;"></iframe-->
	<div class="container">
		<div id="questionBox">
			<span id="exit" onclick="exitPuzzle()" style="visibility:{{visible}}">EXIT</span>

			<p id="question" class="buttonText"></p>
			
			<div id="choiceBox">
				<div class="choice" id="a">
					<p class="buttonText"></p></div>
				<div class="choice" id="b">
					<p class="buttonText"></p></div>
				<div class="choice" id="c">
					<p class="buttonText"></p></div>
				<div class="choice" id="d">
					<p class="buttonText"></p></div>
			</div>
			<div id="countBox">
				<div id="count1" class="count"></div>
				<div id="count2" class="count"></div>
				<div id="count3" class="count"></div>
			</div>
			<h2 id="ans_output"></h2>
			{{#if snoozeON}}
			<div class="bigButton" id="snooze"><p class="addAlarmButtonText">Snooze</p></div>
			{{/if}}
		</div>
	</div>
</body>
</html>
