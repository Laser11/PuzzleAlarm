<html>
<head>
	<title>Test Page</title>
	<meta name="viewport" content="width=device-width, initial-scale:1.0">
	<link rel="stylesheet" href="/css/index.css">

</head>
<body>
	<div class="container">
		<a href="create"><div class="bigButton" id="add"><p class="buttonText">Add Alarm</p></div></a>
		<div id="alarmsBox">
			{{#each alarms}}
			<div style="margin: 2px 0px;float:left;">
				<!--a href="" class="editLink"-->
				<div class="alarm" id="{{name}}">
						<div class="nameText">{{name}}</div>
						<div class="timeText">{{time}}</div>
						<div class="timeText">{{week}}</div>
					
				</div><!--/a-->
				<!--a href="#" class="on"><div><p class="timeText">ON</p></div></a-->
				<a href="create?name={{name}}" class="editLink"><div><p class="buttonText">EDIT</p></div></a>
			</div>
			{{/each}}			
		</div>
		<!--a href="/options"><div class="bigButton" id="Options"><p class="buttonText">Options</p></div></a-->
		<!--div><a href="/help"><div class="bigButton" id="Help"><p class="buttonText">Help</p></a></div-->
	</div>
</body>
</html>
